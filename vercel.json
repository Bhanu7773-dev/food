{
  "version": 2,
  "builds": [
    {
      "src": "public/index.php",
      "use": "vercel-php@0.7.2"
    },
    {
      "src": "public/assets/**",
      "use": "@vercel/static"
    },
    {
      "src": "public/uploads/**",
      "use": "@vercel/static"
    },
    {
      "src": "public/robots.txt",
      "use": "@vercel/static"
    },
    {
      "src": "public/sitemap.xml",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/assets/(.*)",
      "dest": "/public/assets/$1"
    },
    {
      "src": "/uploads/(.*)",
      "dest": "/public/uploads/$1"
    },
    {
      "src": "/robots.txt",
      "dest": "/public/robots.txt"
    },
    {
      "src": "/sitemap.xml",
      "dest": "/public/sitemap.xml"
    },
    {
      "src": "/(.*)",
      "dest": "/public/index.php"
    }
  ]
}
